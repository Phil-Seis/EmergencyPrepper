<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmergencyPrepper.Views.SplashPage"
             BackgroundColor="DarkSlateGrey">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="Emergency Prepper Tool"
                TextColor="GreenYellow"
                FontSize="50"
                FontFamily="DoctorGlitch"
                HorizontalOptions="Center"/>
        <!-- Fading Image -->
        <Image x:Name="RotatingImage" HeightRequest="300" WidthRequest="300" Opacity="0.5"/>

        <!-- Spacer for extra space -->
        <BoxView HeightRequest="20" Color="Transparent"/>
        
        <!-- Loading Text -->
        <Label Text="Hang tight, loading something cool..."
               TextColor="White"
               FontSize="25"
               FontFamily="DoctorGlitch"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>
